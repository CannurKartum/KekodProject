<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.egoFragment">

   <Switch
       android:id="@+id/switch_kidness"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:scaleX="2"
       android:scaleY="2"
       android:thumb="@drawable/ic_thumb"
       android:track="@drawable/bg_track"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:layout_marginTop="50dp"/>

   <Switch
       android:id="@+id/switch_optimism"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:scaleX="2"
       android:scaleY="2"
       android:thumb="@drawable/ic_thumb"
       android:track="@drawable/bg_track"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView2"
       android:layout_marginTop="25dp"/>

   <TextView
       android:id="@+id/tv_optimism"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Optimism"
       android:textSize="22sp"
       app:layout_constraintEnd_toEndOf="@+id/switch_optimism"
       app:layout_constraintStart_toStartOf="@+id/switch_optimism"
       app:layout_constraintTop_toBottomOf="@+id/switch_optimism" />

   <Switch
       android:id="@+id/switch_happiness"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:scaleX="2"
       android:scaleY="2"
       android:thumb="@drawable/ic_thumb"
       android:track="@drawable/bg_track"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView3"
       android:layout_marginTop="25dp" />


   <TextView
       android:id="@+id/textView4"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Happiness"
       android:textSize="22sp"
       app:layout_constraintEnd_toEndOf="@+id/switch_happiness"
       app:layout_constraintStart_toStartOf="@+id/switch_happiness"
       app:layout_constraintTop_toBottomOf="@+id/switch_happiness" />

   <Switch
       android:id="@+id/switch_respect"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:scaleX="2"
       android:scaleY="2"
       android:thumb="@drawable/ic_thumb"
       android:track="@drawable/bg_track"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/tv_optimism"
       android:layout_marginTop="25dp"/>

   <TextView
       android:id="@+id/textView3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Respect"
       android:textSize="22sp"
       app:layout_constraintEnd_toEndOf="@+id/switch_respect"
       app:layout_constraintStart_toStartOf="@+id/switch_respect"
       app:layout_constraintTop_toBottomOf="@+id/switch_respect" />

   <Switch
       android:id="@+id/switch_ego"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:scaleX="2"
       android:scaleY="2"
       android:thumb="@drawable/ic_thumb"
       android:track="@drawable/bg_track"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView5"
       android:layout_marginTop="25dp"/>

   <TextView
       android:id="@+id/textView7"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Ego"
       android:textSize="22sp"
       app:layout_constraintEnd_toEndOf="@+id/switch_ego"
       app:layout_constraintStart_toStartOf="@+id/switch_ego"
       app:layout_constraintTop_toBottomOf="@+id/switch_ego" />

   <Switch
       android:id="@+id/switch_giving"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:scaleX="2"
       android:scaleY="2"
       android:thumb="@drawable/ic_thumb"
       android:track="@drawable/bg_track"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@+id/textView4"
       android:layout_marginTop="25dp" />

   <TextView
       android:id="@+id/textView5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Giving"
       android:textSize="22sp"
       app:layout_constraintEnd_toEndOf="@+id/switch_giving"
       app:layout_constraintStart_toStartOf="@+id/switch_giving"
       app:layout_constraintTop_toBottomOf="@+id/switch_giving" />

   <TextView
       android:id="@+id/textView2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Kindness"
       android:textSize="22sp"
       app:layout_constraintEnd_toEndOf="@+id/switch_kidness"
       app:layout_constraintStart_toStartOf="@+id/switch_kidness"
       app:layout_constraintTop_toBottomOf="@+id/switch_kidness"/>


</androidx.constraintlayout.widget.ConstraintLayout>